{
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "never"],
        "no-console": "off"
    },
    "env": {
        "es6": true,
        "node": false,
        "browser": false,
        "amd": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false,
            "modules": true
        },
        "sourceType": "module"
    },
    "extends": "eslint:recommended"
}
